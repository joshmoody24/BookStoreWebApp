@model Book
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-success" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">By @Model.Author</div>
    <div class="card-text p-1">@Model.Classification/@Model.Category, @Model.PageCount pages</div>
    <div class="card-text p-1">ISBN: @Model.Isbn</div>

    <form method="post" asp-page="/Cart">
        <span class="card-text">
            <input type="hidden" asp-for="@Model.BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn btn-primary btn-sm float-right">Add to Cart</button>
        </span>
    </form>

</div>